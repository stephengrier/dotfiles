[user]
    name = Stephen Grier
    email = git@grier.org.uk
    signingkey = 0xF36B074FC1619D5E
[includeIf "gitdir:~/git/gds/"]
    path = ~/git/gds/.gitconfig
[commit]
    gpgSign = true
[http]
    sslVerify = true
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    graph = log --oneline --graph --decorate
    shorthash = log --abbrev-commit
[diff]
	noprefix = true
